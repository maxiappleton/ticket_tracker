<h1>Sign Up</h1>

<%= render 'shared/form_error_alerts', obj: @user %>

<%= form_for @user, { url: '/signup' } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit 'Create Account' %>
<% end %>

