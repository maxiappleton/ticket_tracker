<h1>All Projects</h1>

<% if @projects.empty? %>
  <p>There are currently no projects! Click below to set one up!</p>
<% else %>
  <table>
    <tr>
      <th>Name</th>
      <th>Total Tickets</th>
    </tr>
    <%= render @projects %>
  </table>
<% end %>

<%= link_to 'New Project', new_project_path %>