<%= render 'shared/form_error_alerts', obj: @project %>

<%= form_for @project do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 5 %>
  <%= f.submit @project.attribute_present?(:id) ? 'Update Project' : 'Create Project' %>
<% end %>

<%= link_to 'Back', projects_path %>